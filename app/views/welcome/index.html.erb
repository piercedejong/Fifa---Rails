<div class="row content" style="margin:0px">
  <% User.all.each do |u| %>
    <div class="inside col" style="padding:5px">
      <div class="title nowrap"><%=u.name%></div>
      <% if u.uid%2 ==0 %>
      <table class="table table-bordered table-striped">
      <% else %>
      <table class="table table-bordered table-striped">
      <!-- <table class="table table-bordered table-striped table-dark"> -->
      <% end %>
        <thead class="thead-dark"></thead>
        <tbody>
          <% u.teams.all.each do |t| %>
            <tr>
              <td class="nowrap"><%=t.name%></td>
              <th scope="row"><%=t.value%></th>
            </tr>
          <% end %>
            <tr>
              <th>Total Points</th>
              <th scope="row"><%=u.total%></th>
            </tr>
        </tbody>
      </table>
    </div>
  <%end%>
</div>

<% if !@load %>
<script>alert('Error: could not load the latest scrores.')</script>
<% end %>
